# Backend Environment Variables
# Copy to .env for local development

# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://dbadmin:<password>@localhost:5432/usasset

# Azure Database (replace with actual values)
# DATABASE_URL=postgresql://dbadmin:<password>@<postgres-server>.postgres.database.azure.com:5432/usasset

# CORS
CORS_ORIGIN=http://localhost:5173

# Azure deployment CORS (replace with your frontend URL)
# CORS_ORIGIN=https://frontend-<unique-id>.azurecontainerapps.io

# API Keys (generate secure values for production)
API_KEY=development-key

# JWT Secret (generate secure value for production)
JWT_SECRET=development-secret